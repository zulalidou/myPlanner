    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shortTaskDesc_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Name"
                android:textSize="25dp"
                android:textAllCaps="false"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/shortTaskDesc_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:layout_below="@+id/shortTaskDesc_TV"
                />



            <TextView
                android:id="@+id/longTaskDesc_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Description"
                android:textSize="25dp"
                android:textAllCaps="false"
                android:gravity="center"

                android:layout_below="@+id/shortTaskDesc_ET"
                />

            <EditText
                android:id="@+id/longTaskDesc_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:layout_below="@id/longTaskDesc_TV"
                />



            <TextView
                android:id="@+id/time_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:gravity="center"

                android:layout_below="@+id/longTaskDesc_ET"
                />

            <Button
                android:id="@+id/setTime_BTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set time"
                android:textSize="30dp"
                android:textAllCaps="false"

                android:layout_below="@+id/time_TV"
                />



            <Button
                android:id="@+id/saveNewTask_BTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:background="@color/themeColor_2"

                android:layout_below="@+id/setTime_BTN"
                android:layout_marginTop="100dp"
                />

            <Button
                android:id="@+id/asdf_BTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:background="@color/themeColor_3"

                android:layout_below="@+id/saveNewTask_BTN"
                android:layout_marginTop="30dp"
                />

        </RelativeLayout>



    </ScrollView>





</RelativeLayout>